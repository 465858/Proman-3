!!! Strict
%html{locale_attrs}
  %head
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    %title
      = h(yield(:title) || "Proman")
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag 'jquery.min','application'
    = yield :head
  
  %body.bp
    #container
      #header
        %h1= link_to 'Proman', root_path
        - if current_user
          #user-navigation
            %ul
              %li= link_to t(:profile), account_path
              %li= link_to t(:logout), logout_path
            .clear
        #main-navigation
          %ul
            %li.active= link_to t(:home), root_path
            - if !current_user
              %li= link_to t(:login), login_path
              %li= link_to t(:register), new_account_path
          .clear
      #main
        #box-flash
          .block
            .flash
              - flash.each do |name, mesg|
                %div{ :class => "message #{name}" }
                  %p&= mesg
        #box= yield
